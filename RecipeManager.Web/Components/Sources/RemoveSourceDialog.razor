<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add Source</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Name" Variant="Variant.Filled" @bind-Value="Name" ReadOnly="true" />
        <MudTextField Label="Location" Variant="Variant.Filled" @bind-Value="Url" ReadOnly="true" />
        <MudAlert Severity="Severity.Error">Are you sure you want to remove this source?</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton EndIcon="@Icons.Material.TwoTone.DeleteForever" Color="Color.Primary" OnClick="Remove">Remove</MudButton>
    </DialogActions>
</MudDialog>
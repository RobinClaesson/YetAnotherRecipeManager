<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Reset Local Source</MudText>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Warning">Are you sure you want to reset the local source?<br />Local recipes will be deleted forever!</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton EndIcon="@Icons.Material.TwoTone.RestartAlt" Color="Color.Primary" OnClick="ResetLocal">Reset</MudButton>
    </DialogActions>
</MudDialog>
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Edit Source</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Name" Variant="Variant.Filled" @bind-Value="Name" />
        <MudTextField Label="Location" Variant="Variant.Filled" @bind-Value="Url" />
        @if (NameIsEmpty)
        {
            <MudAlert Severity="Severity.Warning">Name is required</MudAlert>
        }
        @if (NameExists)
        {
            <MudAlert Severity="Severity.Error">Name already exists</MudAlert>
        }
        @if (UrlIsEmpty)
        {
            <MudAlert Severity="Severity.Warning">Location is required</MudAlert>
        }
        @if (UrlExists)
        {
            <MudAlert Severity="Severity.Error">Location already exists</MudAlert>
        }
        @if (IsSame)
        {
            <MudAlert Severity="Severity.Info">Source unchanged</MudAlert>
        }
        @if (!DisableAply)
        {
            <MudAlert Severity="Severity.Success">Click Apply to save</MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="ApplyEdit" Disabled="@DisableAply">Apply</MudButton>
    </DialogActions>
</MudDialog>
@inherits FluxorComponent

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Failure!</MudText>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Error">Failed to add recipe to '@SourceName'</MudAlert>
        <MudText>Do you want to add the recipe to Local source instead?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="ChangeToLocal">Add to Local source</MudButton>
    </DialogActions>
</MudDialog>
@inherits FluxorComponent

<MudAppBar Color="Color.Primary" Fixed="true">

    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Color="Color.Inherit" Size="Size.Large" />
    <strong>Yet Another Recipe Manager</strong>
    <MudSpacer />

    <MudButtonGroup Color="Color.Inherit" Variant="Variant.Text" Size="Size.Large">
        <MudButton Href="/">Home</MudButton>
        <MudButton Href="/recipes">Recipes</MudButton>
        <MudButton Href="/create">Create</MudButton>
        <MudButton Href="/sources">Sources</MudButton>
    </MudButtonGroup>
    <MudSpacer />

    <MudIconButton Icon="@DarkModeIcon"
                   Color="Color.Inherit"
                   OnClick="ToggleDarkMode" />
    <MudTooltip Text="Source">
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                       Href="https://github.com/RobinClaesson/YetAnotherRecipeManager"
                       Target="blank"
                       Color="Color.Inherit" />
    </MudTooltip>
</MudAppBar>